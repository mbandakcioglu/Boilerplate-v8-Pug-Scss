//- 
include ../includes/general-variables.pug
block variables

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title My Site - #{title}
		link(rel="shortcut icon", href= assets + "/images/favicon.ico", type="image/x-icon")
		link(rel="shortcut icon", href= assets + "/images/favicon-32x32.png", type="image/png")
		link(rel="shortcut icon", href= assets + "/images/favicon-16x16.ico", type="image/png")
		meta(name="description", content= desc)
		meta(name="keywords", content= keywords)
		link(rel="stylesheet", href= assets + "/styles/style.css")
		block head
	body(data-role= pageRole, data-page-name= title)
		main
			block header



			block banner
			block content
			block contentBottom
			
		include ../includes/footer.pug
		script(src='./assets/scripts/app.js')
		block scripts